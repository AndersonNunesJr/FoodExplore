{
  "extends": [
    "@rocketseat/eslint-config/node",
    "@rocketseat/eslint-config/react"
  ],
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": false,
      "semi": true,
      "trailingComma": "none",
      "endOfLine": "auto"
    }]
  }
}